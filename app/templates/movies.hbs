<h2>Movie reviews</h2>
{{add-movie}}
  {{#if model}}
    {{#each model as |movie|}}
      <div class='movie'>
        {{#link-to 'movies.movie' movie}}
        <h2 class='card-movie-title'>{{movie.title}} </h2>
        {{/link-to}}
        <h4 class='card-movie-date'> Date Released: {{movie.date}}</h4>
        <h4 class='card-movie-review'> Review: {{movie.review}}</h4>
        <h4 class='card-movie-rating'> Rating: {{movie.rating}} â˜…</h4>
      </div>
    {{/each}}
    {{else}}
      <p class='no-movies'>
        You have not added any movies. Please add some!
      </p>
  {{/if}}
{{outlet}}
